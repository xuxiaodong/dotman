"-- look --"

set guioptions=Cns
"set showtabline=never
set showstatuslinks=command
set hintkeys=asdfg;lkjh

colorscheme solarized-dark
highlight Hint font-family: input; font-size: 16px; background-color: white; padding: 2px;

"-- search --"

set hlfind

"-- editor --"

set editor='urxvtc -e vim'

"-- passthrough --"

autocmd LocationChange mail.google.com :normal! <C-z>
