"-- look --"

set guioptions=Cns
set showstatuslinks=command
set hintkeys=asdfg;lkjh
set maxitems=15
set titlestring=

colorscheme gruvbox-dark
highlight Hint font-family: 'source code pro'; font-size: 10px; background-color: #ffffff; color: #000000 !important; padding: 1px;

"-- search --"

set hlfind

"-- editor --"

set editor='urxvtc -e vim'

"-- passthrough --"

autocmd LocationChange mail.google.com|feedly.com :normal! <C-z>
